<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:id="@+id/ll_controll"
    android:background="@drawable/colorstrip_shadow"
     >
      
     
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:orientation="horizontal">
       <FrameLayout
         android:layout_width="0dp"
         android:layout_height="wrap_content"
         android:layout_weight="1"
           >
    
          <Button 
              android:id="@+id/bt_playmode"
              android:layout_width="50dip"
              android:layout_height="50dip"
              android:layout_gravity="center"
              android:background="@drawable/img_playmode_normal"
              />
      </FrameLayout>
      
      <FrameLayout
         android:layout_width="0dp"
         android:layout_height="wrap_content"
         android:layout_weight="1.5"
           >
    
          <Button 
              android:id="@+id/bt_playprevious"
              android:layout_width="50dip"
              android:layout_height="50dip"
              android:layout_gravity="center"
              android:background="@drawable/img_button_previous_normal"
              />
      </FrameLayout>
      
      <FrameLayout
         android:layout_width="0dp"
         android:layout_height="wrap_content"
         android:layout_weight="1.5"
           >
    
          <Button 
              android:id="@+id/bt_play"
              android:layout_width="50dip"
              android:layout_height="50dip"
              android:layout_gravity="center"
              android:background="@drawable/img_background_play"
              />
      </FrameLayout>
      
      <FrameLayout
         android:layout_width="0dp"
         android:layout_height="wrap_content"
         android:layout_weight="1.5"
           >
    
          <Button 
              android:id="@+id/bt_playnext"
              android:layout_width="50dip"
              android:layout_height="50dip"
              android:layout_gravity="center"
              android:background="@drawable/img_button_next_normal"
              />
        </FrameLayout>
      
        <FrameLayout
         android:layout_width="0dp"
         android:layout_height="wrap_content"
         android:layout_weight="1"
           >
    
          <Button 
              android:id="@+id/bt_play_to_meun"
              android:layout_width="50dip"
              android:layout_height="50dip"
              android:layout_gravity="center"
              android:background="@drawable/image_play_meun"
              />
        </FrameLayout>
    </LinearLayout>
</LinearLayout>




